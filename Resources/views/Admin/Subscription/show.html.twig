{% extends 'WobbleCodeAdminBundle::layout.html.twig' %}

{% block app_content_title %}
  {{ 'WobbleCodeNotification.view.Admin.Subscription.show.title'|trans({'%id%': entity.id}) }}
{% endblock %}

{% block app_content_content %}
<div class="row">

  <div class="col-md-4 col-md-push-8">
    <ul class="list-group list-flat">
      <li class="list-group-item list-title">
        <h5>{{ "common.metadata.title"|trans }}</h5>
      </li>
      <li class="list-group-item">{{ "common.metadata.created_at"|trans }} <span data-toggle="tooltip" title="{{ entity.createdAt|date('Y-m-d H:i:s') }}">{{ entity.createdAt|date('Y-m-d') }}</span></li>
       {% if entity.updatedAt %}
      <li class="list-group-item">{{ "common.metadata.updated_at"|trans }} <span data-toggle="tooltip" title="{{ entity.updatedAt|date('Y-m-d H:i:s') }}">{{ entity.updatedAt|date('Y-m-d') }}</span></li>
      {% endif %}                </ul>
  </div>

  <div class="col-md-8 col-md-pull-4">
    <p class="lead">{{ 'WobbleCodeNotification.view.Admin.Subscription.show.subtitle'|trans({'%id%': entity.id}) }}</p>
      <ul class="nav nav-tabs">
        <li class="active"><a href="#general" data-toggle="tab">{{ "common.view.show.general.tab"|trans }}</a></li>
                <li class=""><a href="#actions" data-toggle="tab">{{ "common.view.show.actions.tab"|trans }}</a></li>
      </ul>

      <div class="tab-content">

        <div class="tab-pane fade active in" id="general">
          <div class="table-responsive">
            <table class="table table-list">
              <tbody>
              <tr>
                  <th>{{ 'WobbleCodeNotification.view.Admin.Subscription.show.field.id'|trans }}</th><td>{{ entity.id }}</td>                </tr>
              <tr>
                  <th>{{ 'WobbleCodeNotification.view.Admin.Subscription.show.field.sendEmail'|trans }}</th><td>{{ entity.sendEmail ? 'Yes' : 'No' }}</td>                </tr>
              <tr>
                  <th>{{ 'WobbleCodeNotification.view.Admin.Subscription.show.field.enabled'|trans }}</th><td>{{ entity.enabled ? 'Yes' : 'No' }}</td>                </tr>
              <tr>
                  <th>{{ 'WobbleCodeNotification.view.Admin.Subscription.show.field.visible'|trans }}</th><td>{{ entity.visible ? 'Yes' : 'No' }}</td>                </tr>
              <tr>
                  <th>{{ 'WobbleCodeNotification.view.Admin.Subscription.show.field.createdAt'|trans }}</th><td>
                     {% if entity.createdAt %}
                      {{ entity.createdAt|date('Y-m-d H:i:s') }}
                    {% else %}
                      <span class="text-muted">n/a</span>
                    {% endif %}
                  </td>                </tr>
              <tr>
                  <th>{{ 'WobbleCodeNotification.view.Admin.Subscription.show.field.updatedAt'|trans }}</th><td>
                     {% if entity.updatedAt %}
                      {{ entity.updatedAt|date('Y-m-d H:i:s') }}
                    {% else %}
                      <span class="text-muted">n/a</span>
                    {% endif %}
                  </td>                </tr>
              </tbody>
            </table>
          </div>
          <hr/>

          <a class="btn btn-primary" href="{{ path('admin_notification_subscription_edit', { 'id': entity.id }) }}">{{ 'WobbleCodeNotification.view.Admin.Subscription.show.button.edit'|trans }}</a>
          <a class="btn btn-link" href="{{ path('admin_notification_subscription') }}">
            {{ 'WobbleCodeNotification.view.Admin.Subscription.show.link.back'|trans }}
          </a>

          <button onclick="$('#form_delete_{{ delete_form.vars.name  }}').submit();" class="btn btn-danger pull-right" type="submit">{{ 'WobbleCodeNotification.view.Admin.Subscription.show.button.delete'|trans }}</button>
          <form id="form_delete_{{ delete_form.vars.name  }}" action="{{ path('admin_notification_subscription_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
          </form>
        </div>

        <div class="tab-pane fade" id="actions">
                    <h5>{{ "common.view.show.actions.nosoftdelete.title"|trans }}</h5>
          <p>
            {{ "common.view.show.actions.nosoftdelete.desc"|trans }}
          </p>
          <p>
            <form id="form_delete_{{ delete_form.vars.name  }}" action="{{ path('admin_notification_subscription_delete', { 'id': entity.id }) }}" method="post">
              <input type="hidden" name="_method" value="DELETE" />
              {{ form_widget(delete_form) }}
              <button class="btn btn-danger">{{ "common.view.show.actions.nosoftdelete.button"|trans }}</button>
            </form>
          </p>
                  </div>


      </div>
    </div>
  </div>

</div>
{% endblock %}
